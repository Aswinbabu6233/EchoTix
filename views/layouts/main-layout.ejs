<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EchoTix</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    />
  </head>
  <body>
    <header>
      <div class="headersection">
        <div class="logo">
          <% if(adminpresent){%>
          <a href="/admin/dashboard">ECHOTIX ADMIN</a>
          <%}else{%>
          <a href="/">ECHOTIX</a>
          <%}%>
        </div>

        <!-- admin nav -->
        <% if(!hidenav){%> <%if( adminpresent){%>
        <nav class="admin-nav">
          <ul class="admin-links">
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li class="dropdown-parent">
              <a href="#">Management <i class="fa-solid fa-caret-down"></i></a>
              <ul class="dropdown">
                <li><a href="/admin/bands">Bands</a></li>
                <li><a href="/admin/concerts">Concerts</a></li>
                <li><a href="/admin/artists">Artists</a></li>
              </ul>
            </li>
            <li><a href="/admin/bookings">Bookings</a></li>
            <li><a href="/admin/users">Users</a></li>
            <li><a href="/admin/profile">Profile</a></li>
          </ul>
        </nav>

        <%}else{%>

        <nav>
          <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/concert/list">Concerts</a></li>
            <li><a href="/artists/list">Artists</a></li>
          </ul>

          <% if (userpresent) { %> <% if (!userdetails?.profileImage?.data) { %>
          <img
            class="profilepic"
            src="/images/Agam-Band.jpg"
            alt="default profile"
            onclick="toggle()"
          />
          <% } else { %>
          <img
            class="profilepic"
            src="data:<%= userdetails.profileImage.contentType %>;base64,<%= userdetails.profileImage.data.toString('base64') %>"
            alt="profile image"
            loading="lazy"
            onclick="toggle()"
          />
          <% } %>

          <div class="dropdown-wraper" id="dropdown">
            <div class="submenu">
              <div class="userinfo">
                <% if (userdetails?.profileImage?.data) { %>
                <img
                  src="data:<%= userdetails.profileImage.contentType %>;base64,<%= userdetails.profileImage.data.toString('base64') %>"
                  alt="profile"
                />
                <% } else { %>
                <img src="/images/Agam-Band.jpg" alt="default" />
                <% } %>
                <h4><%= userdetails?.username || 'User' %></h4>
              </div>
              <hr />
              <a href="/user/profile" class="submenu-link">
                <i class="fas fa-user"></i>
                <p>My Profile</p>
                <span><i class="fa-solid fa-angle-right"></i></span>
              </a>
              <a href="/user/tickets" class="submenu-link">
                <i class="fa-solid fa-ticket"></i>
                <p>My Tickets</p>
                <span><i class="fa-solid fa-angle-right"></i></span>
              </a>
              <a href="/user/logout" class="submenu-link">
                <i class="fa-solid fa-right-from-bracket"></i>
                <p>Logout</p>
                <span><i class="fa-solid fa-angle-right"></i></span>
              </a>
            </div>
          </div>

          <% } else { %>
          <div class="header-right">
            <a href="/user/login">
              <i class="fa-regular fa-user"></i> Login/Register
            </a>
          </div>
          <% } %>
        </nav>
        <%}%> <%}%>
      </div>
    </header>

    <%- body %>

    <script src="/javascripts/script.js"></script>
  </body>
</html>
